{
  "openapi": "3.0.3",
  "info": {
    "title": "Open-TTS API",
    "version": "0.4.0",
    "description": "API for Open-TTS voice synthesis, settings, history, and audio downloads. Supports Piper and Supertonic voice IDs."
  },
  "servers": [
    {
      "url": "http://localhost:3016"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Healthy"
          }
        }
      }
    },
    "/api/settings": {
      "get": {
        "summary": "Read shared app settings",
        "responses": {
          "200": {
            "description": "Settings payload"
          }
        }
      },
      "put": {
        "summary": "Write shared app settings",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "voice": { "type": "string" },
                  "speed": { "type": "number" },
                  "volume": { "type": "number" },
                  "downloadFormat": { "type": "string", "enum": ["wav", "mp3", "ogg"] },
                  "theme": { "type": "string", "enum": ["light", "dark"] },
                  "autoPasteClipboard": { "type": "boolean" },
                  "prependSilenceMs": { "type": "integer", "minimum": 0, "maximum": 3000 },
                  "hotkeys": { "type": "object" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Settings saved"
          }
        }
      }
    },
    "/api/history": {
      "get": {
        "summary": "Read shared history",
        "responses": {
          "200": {
            "description": "History payload"
          }
        }
      },
      "put": {
        "summary": "Replace shared history",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "History saved"
          }
        }
      },
      "post": {
        "summary": "Append one history entry",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Entry added"
          }
        }
      }
    },
    "/api/voices": {
      "get": {
        "summary": "List installed voices and full catalog",
        "responses": {
          "200": {
            "description": "Voices payload"
          }
        }
      }
    },
    "/api/voices/install": {
      "post": {
        "summary": "Install a voice from catalog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["voice"],
                "properties": {
                  "voice": {
                    "type": "string",
                    "description": "Piper ID (e.g. en_US-ryan-high) or Supertonic ID (e.g. supertonic:en:M1)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Voice installed"
          }
        }
      }
    },
    "/api/voices/{voice_id}": {
      "delete": {
        "summary": "Uninstall a voice",
        "parameters": [
          {
            "name": "voice_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Voice removed"
          }
        }
      }
    },
    "/api/speak": {
      "post": {
        "summary": "Generate speech audio",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["text"],
                "properties": {
                  "text": { "type": "string" },
                  "voice": {
                    "type": "string",
                    "description": "Piper ID or Supertonic ID"
                  },
                  "speed": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Audio generated"
          }
        }
      }
    },
    "/api/audio/{name}": {
      "get": {
        "summary": "Read generated WAV",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "WAV audio"
          }
        }
      }
    },
    "/api/download/{name}": {
      "get": {
        "summary": "Download generated audio as wav/mp3/ogg",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "format",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["wav", "mp3", "ogg"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Download"
          }
        }
      }
    },
    "/api/openapi.json": {
      "get": {
        "summary": "Dynamic OpenAPI document",
        "responses": {
          "200": {
            "description": "OpenAPI JSON"
          }
        }
      }
    },
    "/api/docs": {
      "get": {
        "summary": "In-app Swagger UI",
        "responses": {
          "200": {
            "description": "Swagger HTML"
          }
        }
      }
    }
  }
}
